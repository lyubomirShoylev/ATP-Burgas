<Page
    x:Class="BFU_Hackaton.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BFU_Hackaton"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="Assets/BFU-logo.png" Stretch="Uniform"/>
        </StackPanel.Background>
        <TextBlock Margin="50,25,50,25" TextWrapping="Wrap" Text="Факултетен номер на студента" FontSize="24" TextAlignment="Center"/>
        <TextBox x:Name="Fan" Margin="50,0,50,0" FontSize="24" TextWrapping="Wrap"   />
        <Button x:ConnectionId='1' Name="MarksButton" Margin="50,0,50,0" Content="Marks" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                           Background="Black"/>
        <Button x:ConnectionId='2' Name="ExamsButton" Margin="50,0,50,0" Content="Exams" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                           Background="Black"/>
    
    </StackPanel>
</Page>

