@using DataAccess
@model IEnumerable<Customers>
@{
    ViewBag.Title = "AllCustomers";
}


@Html.ActionLink("Add New Customer", "Insert", "Customer", new { @class = "glyphicon glyphicon-plus" })
<table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>Contact Name</th>
            <th>Country</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Customers cust in Model)
        {
            <tr>
                <td>@Html.ActionLink(" ", "Details", "Customer", new { @id = cust.CustomerID }, new { @class = "glyphicon glyphicon-list" })</td>
                <td>@Html.ActionLink(" ", "Edit", "Customer", new { @id = cust.CustomerID }, new {@class = "glyphicon glyphicon-edit"})</td>
                <td>@Html.DisplayFor(x => cust.ContactName)</td>
                <td>@Html.DisplayFor(x => cust.Country)</td>
                <td>@Html.DisplayFor(x => cust.City)</td>
                <td>@Html.ActionLink(" ", "Delete", "Customer", new { @id = cust.CustomerID }, new { @class = "glyphicon glyphicon-trash" })</td>
            </tr>
        }
    </tbody>
</table>



