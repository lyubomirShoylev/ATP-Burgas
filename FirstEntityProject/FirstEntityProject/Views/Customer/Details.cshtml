
@model DataAccess.Customers
@{
    ViewBag.Title = "Details";
}

<h2>Customer Details</h2>

<div class="row">
    <div class="col-md-4">Contact Name</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.ContactName, null, new { htmlAttributes = new { @class = "form-control" } })</div>

    <div class="col-md-4">Company Name</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.CompanyName, null, new { htmlAttributes = new { @class = "form-control" } })</div>

    <div class="col-md-4">Address</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.Address, null, new { htmlAttributes = new { @class = "form-control" } })</div>

    <div class="col-md-4">City</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.City, null, new { htmlAttributes = new { @class = "form-control" } })</div>

    <div class="col-md-4">Country</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.Country, null, new { htmlAttributes = new { @class = "form-control" } })</div>

    <div class="col-md-4">Fax</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.Fax, null, new { htmlAttributes = new { @class = "form-control" } })</div>

    <div class="col-md-4">Phone</div>
    <div class="col-md-8">@Html.DisplayFor(x => x.Phone, null, new { htmlAttributes = new { @class = "form-control" } })</div>
</div>

@foreach (var order in Model.Orders)
{
    @Html.DisplayFor(x => order);
        <br />
}
