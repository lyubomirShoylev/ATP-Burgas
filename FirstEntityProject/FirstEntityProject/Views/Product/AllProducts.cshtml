@using DataAccess
@model IEnumerable<Products>
@{
    ViewBag.Title = "AllProducts";
}
@Html.ActionLink("Add New Product", "Insert", "Product")
<table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Products prod in Model)
        {
            <tr>
                <td>@Html.ActionLink("Details", "Details", "Product", new { @id = prod.ProductID },null)</td>
                <td>@Html.ActionLink("Edit", "Edit", "Product", new { @id = prod.ProductID }, null)</td>
                <td>@Html.Raw(prod.ProductName)</td>
                <td>@Html.Raw(prod.UnitPrice)</td>
                <td>@Html.ActionLink("Delete", "Delete", "Product", new { @id = prod.ProductID }, null)</td>
            </tr>
        }
    </tbody>
</table>